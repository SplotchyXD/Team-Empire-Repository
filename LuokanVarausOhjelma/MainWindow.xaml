<Window x:Class="LuokanVarausOhjelma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuokanVarausOhjelma"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized">
    <Grid RenderTransformOrigin="0.499,0.502" Margin="0,-2,0,2">
        <Image Margin="59,31,33,10">
            <Image.Source>
                <BitmapImage DecodePixelWidth="7500" UriSource="/Images/Kerross2.jpg"/>
            </Image.Source>
        </Image>

        <Image HorizontalAlignment="Left" Height="452" Margin="227,-19,0,0" VerticalAlignment="Top" Width="669" Source="/LuokkaKarttaK2.png" RenderTransformOrigin="0.5,0.5">

            <Image.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.LayoutTransform>
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform X="0" Y="-5"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Canvas HorizontalAlignment="Left" Height="692" VerticalAlignment="Center" Width="396" RenderTransformOrigin="0.5,0.5" Margin="216,0,0,0" Visibility="Hidden">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <Canvas.Background>
                <ImageBrush ImageSource="/Images/LuokkaKarttaK2v2.png"/>
            </Canvas.Background>

        </Canvas>
        <Button x:Name="Fakta" Content="" HorizontalAlignment="Left" Margin="181,272,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="36" Width="45" Visibility="Visible" Click="Fakta_Click" Opacity="0.01">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.036"/>
                    <SkewTransform AngleX="12.671" AngleY="8.869"/>
                    <RotateTransform Angle="1489.181"/>
                    <TranslateTransform X="-1.563" Y="11.115"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="Into" Content="Button" HorizontalAlignment="Left" Margin="232,296,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="40" Width="57" Visibility="Visible">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.805"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
